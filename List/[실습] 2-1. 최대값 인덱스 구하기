import java.util.*;
class Solution {
    public int[] solution(int[] arr) {
        List<Integer> list = new ArrayList<>();
        int max = arr[0];
        for(int i = 1; i < arr.length; i++){
            max = Math.max(max , arr[i]);
        }
        for(int i=0; i< arr.length; i++){
            if(arr[i] == max){
                list.add(i);
            }
        }
        int[] answer = new int[list.size()];
        
        for(int i=0; i< list.size(); i++){
            
            answer[i] = list.get(i);
        }
        
        return answer;
    }
}